<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FDFA"
    android:backgroundTint="#F0FDFA">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="Lista Universidades"
        android:textColor="#1D5D9B"
        android:textColorHighlight="@color/design_default_color_secondary_variant"
        android:textColorHint="@color/material_dynamic_primary30"
        android:textColorLink="#1D5D9B"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="334dp"
        android:layout_height="455dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_universidades_lista"
                android:layout_width="372dp"
                android:layout_height="469dp"
                android:background="#00BCD4"
                android:cacheColorHint="#000000" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_crear_new_universidad"
        android:layout_width="326dp"
        android:layout_height="65dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#000000"
        android:text="AGREGAR NUEVA UNIVERSIDAD"
        android:textColor="@color/white"
        android:textColorHighlight="#3F51B5"
        android:textColorLink="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/scrollView2"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="@+id/scrollView2"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />
</androidx.constraintlayout.widget.ConstraintLayout>